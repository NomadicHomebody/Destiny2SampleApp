{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "start",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "type": "npm",
      "script": "test",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "label": "set-workspace-path",
      "type": "shell",
      "command": "echo",
      "args": ["Setting workspace path for debugging..."],
      "windows": {
        "options": {
          "env": {
            "WORKSPACE_PATH": "${workspaceFolder}/destiny-inventory-manager/"
          }
        }
      },
      "linux": {
        "options": {
          "env": {
            "WORKSPACE_PATH": "${workspaceFolder}/destiny-inventory-manager/"
          }
        }
      },
      "osx": {
        "options": {
          "env": {
            "WORKSPACE_PATH": "${workspaceFolder}/destiny-inventory-manager/"
          }
        }
      },
      "presentation": {
        "reveal": "never",
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "prepare-and-serve",
      "type": "shell",
      "command": "echo Starting Angular server...; npm run-script debug",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/destiny-inventory-manager",
        "shell": {
          "executable": "powershell.exe",
          "args": ["-Command"]
        }
      },
      "problemMatcher": {
        "owner": "angular",
        "pattern": {
          "regexp": ".",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting Angular server",
          "endsPattern": "Compiled successfully"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    }
  ]
}